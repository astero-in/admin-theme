  <button
    id="theme-toggler"
    class="btn btn-default"
    style="padding: 10px 20px; background-color: #f0f0f0; border: none; border-radius: 5px; cursor: pointer; font-size: 16px; color: #333; transition: background-color 0.3s ease;"
  >
    Toggle Theme
  </button>
  <!--end::Copyright-->
</footer>
<!--end::Footer-->

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const themeToggler = document.getElementById("theme-toggler");
    const savedTheme = localStorage.getItem("theme") || "light";

    document.body.classList.add(
      savedTheme === "dark" ? "theme-dark" : "theme-light",
    );

    themeToggler.addEventListener("click", () => {
      const isDarkMode = document.body.classList.contains("theme-dark");
      const newTheme = isDarkMode ? "theme-light" : "theme-dark";

      document.body.classList.remove("theme-dark", "theme-light");
      document.body.classList.add(newTheme);

      localStorage.setItem("theme", isDarkMode ? "light" : "dark");
    });
  });
</script>
